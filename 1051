salario = float(input())
if (salario >= 0.00 and salario <= 2000.00):
  print ("Isento")
elif (salario >= 2000.01 and salario <= 3000.00):
  x = (salario - 2000.00) * 0.08
  print ("R$ %.2f" % (x))
elif (salario >= 3000.01 and salario <= 4500.00):
  y = 1000 * 0.08 + ((salario - 3000.00) * 0.18)
  print ("R$ %.2f" % (y))
else:
  z = 1000 * 0.08 + 1500 * 0.18 + ((salario - 4500.00)  * 0.28)
  print ("R$ %.2f" % (z))
